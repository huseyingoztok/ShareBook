@using ShareBook.Entities.ValueObjects
@model LoginViewModel

@{
        ViewBag.Title = "Login";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<link href="~/Content/login/login.css" rel="stylesheet" />

@using (Html.BeginForm("Login", "Home", FormMethod.Post, null))
{
    <div class="container-fluid col-md-4">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                @Html.ValidationSummary(false, "", new { @class = "text-left", style = "color:#007BFF" })
                    <div class="form-group">
                        <label for="username">Username</label>
                        @Html.TextBoxFor(model => model.Username, new { id = "username", @class = "form-control", name = "username", autofocus = "true", placeholder = "Kullanıcı Adınız..." })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { type = "password", id = "password", @class = "form-control", name = "email", autofocus = "true", placeholder = "Şifreniz...", data_eye = "true" })
                    </div>
                    
                    <div class="form-group no-margin ">
                        <button type="submit" class="btn btn-primary btn-block">
                            Login
                        </button>
                    </div>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Home/Register">Register an Account</a>
                    <a class="d-block small" href="/Home/ForgotPassword">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
   
}

   




<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/login/login.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('footer').hide();
        });
    </script>



