@using ShareBook.Entities
@model ShareBookUser
<link href="~/Content/login/login.css" rel="stylesheet" />
@using ShareBook.WebApp.Models
@{
    Layout = null;
}
<link href="~/Content/login/login.css" rel="stylesheet" />
@using (Html.BeginForm("DeleteUser", "Home", FormMethod.Post, null))
{
    <div class="container-fluid col-md-8">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Delete My Account</div>
            <div class="card-body">

                @Html.ValidationSummary(false, "", new { @class = "text-left", style = "color:#007BFF" })

          
                  
                    @Html.HiddenFor(x=>x.Id)


                    <div class="form-group">
                       
                        <input type="password" id = "Password" class = "form-control" name = "Password"  placeholder = "Şifreniz..." data_eye = "true"  />
                    </div>
                    <div class="form-group no-margin">
                        <button type="submit" class="btn btn-primary btn-block">
                            <span class="fa fa-send"> Gönder</span>
                        </button>
                    </div>
                


                <div class="text-center">
                    <a class="d-block small" href="/Home/ForgotPassword">Forgot Password</a>
                </div>
            </div>
        </div>
    </div>

}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/login/login.js"></script>