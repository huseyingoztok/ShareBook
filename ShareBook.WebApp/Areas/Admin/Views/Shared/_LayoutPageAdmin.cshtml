@using ShareBook.WebApp.Models
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Huseyin E-commerce</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Areas/Admin/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Areas/Admin/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Areas/Admin/Content/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Areas/Admin/Content/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect. -->
    <link href="~/Areas/Admin/Content/skin-green.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/ckeditor/contents.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/admcss/bootstrap-fileupload.min.css" rel="stylesheet" />
    @*<link href="~/Areas/Admin/Content/admcss/textboxshadow.css" rel="stylesheet" />*@
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link href="~/Areas/Admin/Content/myfont.css" rel="stylesheet" />
</head>

<body class="hold-transition skin-green sidebar-mini">
    <div class="wrapper">

        <!-- Main Header -->

        <header class="main-header">

            <!-- Logo -->
            <a href="~/Admin/AdminHome/Index" class="logo">
                <span class="logo-lg"><b>Admin</b>LTE</span>
            </a>

            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">

                <div class="navbar-custom-menu">


                    @if (CurrentSession.shareBookUserAdmin.isAdmin&&CurrentSession.shareBookUserAdmin!=null)
                    {

                            <ul class="nav navbar-nav">


                                <li class="dropdown user user-menu">
                                    <!-- Menu Toggle Button -->
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <img src="~/Areas/Admin/assets/@(CurrentSession.shareBookUserAdmin.Username+".jpg")" class="user-image" alt="User Image" />
                                        <span class="hidden-xs">@(CurrentSession.shareBookUserAdmin.Name + " " + CurrentSession.shareBookUserAdmin.Surname)</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- The user image in the menu -->
                                        <li class="user-header">
                                            <img src="~/Areas/Admin/assets/@(CurrentSession.shareBookUserAdmin.Username+".jpg")" class="img-circle" alt="User Image" />

                                            <p>
                                                @(CurrentSession.shareBookUserAdmin.Name + " " + CurrentSession.shareBookUserAdmin.Surname) - Web Developer
                                                <small>Member since Nov. 2017</small>
                                            </p>
                                        </li>

                                        <!-- Menu Footer-->
                                        <li class="user-footer">

                                            <div class="pull-right">
                                                <a href="/Admin/Login/LoginPage" class="btn btn-danger">Sign out</a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                            </ul>

                        
                    }





                </div>
            </nav>

        </header>


        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">

            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                 




                        @if (CurrentSession.shareBookUserAdmin.isAdmin && CurrentSession.shareBookUserAdmin != null)
                        {


                                <div class="pull-left image">
                                    <img src="~/Areas/Admin/assets/@(CurrentSession.shareBookUserAdmin.Username+".jpg")" class="img-circle" alt="User Image" />
                                </div>
                                <div class="pull-left info">
                                    <p>@(CurrentSession.shareBookUserAdmin.Name + " " + CurrentSession.shareBookUserAdmin.Surname)</p>
                                    <a href="/Admin/AdminHome/Index"><i class="fa fa-circle text-success"></i> Online</a>
                                </div>
                            
                        }
                    


                </div>


                <!-- Sidebar Menu -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">DASHBOARD</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li>
                        <a href="~/Admin/AdminHome/Index">
                            <i class="fa fa-home"></i> <span>Anasayfa</span>
                        </a>
                    </li>

                    <li>
                        <a href="~/Admin/Category/Index">
                            <i class="fa fa-bars"></i> <span>Kategoriler</span>
                        </a>
                    </li>

                   

                    <li>
                        <a href="~/Admin/Slider/Index">
                            <i class="fa fa-sliders"></i> <span>Sliderlar</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Admin/Log/Index">
                            <i class="fa fa-archive"></i> <span>Logs</span>
                        </a>
                    </li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content container-fluid">

                @RenderBody()

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <!-- Default to the left -->
            <strong>Copyright &copy; 2017 - @DateTime.Now.Year <a href="#">Company</a>.</strong> All rights reserved.
        </footer>


        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 3 -->
    <script src="~/Areas/Admin/Scripts/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Areas/Admin/Scripts/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Scripts/js/adminlte.min.js"></script>
    <script src="~/Areas/Admin/Scripts/js/bootstrap-fileupload.js"></script>

</body>
</html>