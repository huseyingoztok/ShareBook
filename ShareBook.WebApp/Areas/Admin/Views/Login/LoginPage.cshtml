@using ShareBook.Entities.ValueObjects
@model AdminViewModel
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Bootstrap Advance Admin Template</title>

    <!-- BOOTSTRAP STYLES-->

    <link href="~/Areas/Admin/Content/admcss2/bootstrap.min.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Areas/Admin/Content/admcss/font-awesome.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href="~/Areas/Admin/Content/admcss/fonts.googleapis.css" rel="stylesheet" />

    <style type="text/css">
        body {
            background-image: url('/Areas/Admin/assets/bg-3.jpg');
            background-attachment: fixed;
            background-size: 100% 100%;
        }
    </style>
    <link href="~/Areas/Admin/Content/admcss/ValidationSummary.css" rel="stylesheet" />
</head>
<body>

    @using (Html.BeginForm("LoginPage", "Login", FormMethod.Post, null))
    {
        <div class="container-fluid col-md-4" style="margin:200px auto;opacity:0.9">
            <div class="card card-login mx-auto mt-5">
                <div class="card-header">Admin Panel</div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-left", style = "color:#007BFF" })
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        @Html.TextBoxFor(model => model.Email, new { id = "email", @class = "form-control", name = "email", autofocus = "true", placeholder = "Emailiniz..." })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { type = "password", id = "password", @class = "form-control", name = "email", autofocus = "true", placeholder = "Şifreniz...", data_eye = "true" })
                    </div>

                    <div class="form-group no-margin ">
                        <button type="submit" class="btn btn-primary btn-block">
                            Login
                        </button>
                    </div>
                    
                </div>
            </div>
        </div>

    }





   

</body>
</html>